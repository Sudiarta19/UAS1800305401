<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgbarang"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtid_barang"
        android:text="id_barang"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:textAlignment="center"
        android:layout_below="@+id/imgbarang"
        android:layout_alignRight="@+id/imgbarang"
        android:layout_alignEnd="@+id/imgbarang"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <TextView
        android:text="nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnama"
        android:textSize="17sp"
        android:textColor="#ce1309"
        android:textAlignment="center"
        android:layout_below="@+id/txtid_barang"
        android:layout_alignRight="@+id/imgbarang"
        android:layout_alignEnd="@+id/imgbarang"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"/>
    <TextView
        android:text="jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtjumlah"
        android:textSize="17sp"
        android:textColor="#ce1309"
        android:textAlignment="center"
        android:layout_below="@+id/txtnama"
        android:layout_alignRight="@+id/imgbarang"
        android:layout_alignEnd="@+id/imgbarang"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"/>
    <TextView
        android:text="lokasi_gedung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtlokasigedung"
        android:textSize="17sp"
        android:textColor="#ce1309"
        android:textAlignment="center"
        android:layout_below="@+id/txtjumlah"
        android:layout_alignRight="@+id/imgbarang"
        android:layout_alignEnd="@+id/imgbarang"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />
    <TextView
        android:text="lokasi_ruang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtlokasiruang"
        android:textSize="17sp"
        android:textColor="#ce1309"
        android:textAlignment="center"
        android:layout_below="@+id/txtlokasigedung"
        android:layout_alignRight="@+id/imgbarang"
        android:layout_alignEnd="@+id/imgbarang"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"/>
</LinearLayout>