<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewBarang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="113dp"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="30dp"
                tools:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar" />

            <EditText
                android:id="@+id/edtId_barang"
                android:layout_width="282dp"
                android:layout_height="57dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="id_barang"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtNama"
                android:layout_width="282dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Nama "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtJumlah"
                android:layout_width="282dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Jumlah"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtLokasi_gedung"
                android:layout_width="282dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Lokasi Gedung"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtLokasi_ruang"
                android:layout_width="282dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Lokasi Ruang" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Update Data" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>